'use strict';

class Entity {
  constructor() {
    this._id = undefined;
  }

  _create() {
    return new Entity();
  }

  clone() {
    var cloned_user = this._create();
    if (this.getId())
      cloned_user.setId(this.getId());
    return cloned_user;
  }

  getId() {
    return this._id;
  }

  setId(id) {
    this._id = id;
  }
}

module.exports = Entity;